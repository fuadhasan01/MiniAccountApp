@page
@model MiniAccountApp.Pages.ChartOfAccounts.IndexModel

<h2>Chart of Accounts</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New Account</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Account Code</th>
            <th>Account Name</th>
            <th>Account Type</th>
            <th>Parent Account Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.AccountCode</td>
                <td>@account.AccountName</td>
                <td>@account.AccountType</td>
                <td>@(account.ParentAccountId?.ToString() ?? "N/A")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@account.AccountId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@account.AccountId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
