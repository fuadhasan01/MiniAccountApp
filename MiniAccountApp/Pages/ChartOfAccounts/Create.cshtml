@page
@model MiniAccountApp.Pages.ChartOfAccounts.CreateModel

<h2>Create New Chart of Account</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Account.AccountCode"></label>
        <input asp-for="Account.AccountCode" class="form-control" />
        <span asp-validation-for="Account.AccountCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountName"></label>
        <input asp-for="Account.AccountName" class="form-control" />
        <span asp-validation-for="Account.AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountType"></label>
        <select asp-for="Account.AccountType" asp-items="Model.AccountTypes" class="form-control"></select>
        <span asp-validation-for="Account.AccountType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountCategory"></label>
        <input asp-for="Account.AccountCategory" class="form-control" />
        <span asp-validation-for="Account.AccountCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.ParentAccountId"></label>
        <input asp-for="Account.ParentAccountId" class="form-control" />
        <small class="form-text text-muted">Enter Parent Account GUID (optional)</small>
        <span asp-validation-for="Account.ParentAccountId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountLevel"></label>
        <input asp-for="Account.AccountLevel" class="form-control" />
        <span asp-validation-for="Account.AccountLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.IsActive"></label>
        <select asp-for="Account.IsActive" asp-items="Model.IsActiveOptions" class="form-control"></select>
        <span asp-validation-for="Account.IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountNature"></label>
        <select asp-for="Account.AccountNature" asp-items="Model.AccountNatureOptions" class="form-control"></select>
        <span asp-validation-for="Account.AccountNature" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Account.Description"></label>
        <textarea asp-for="Account.Description" class="form-control"></textarea>
        <span asp-validation-for="Account.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
