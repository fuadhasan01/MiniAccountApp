@page
@model MiniAccountApp.Pages.ChartOfAccounts.CreateModel
@{
    ViewData["Title"] = "Create Chart of Account";
}

<h2 class="mb-4 text-primary">Create Chart of Account</h2>

<form method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="ChartOfAccount.AccountName" class="form-label"></label>
        <input asp-for="ChartOfAccount.AccountName" class="form-control" placeholder="Enter account name" />
        <span asp-validation-for="ChartOfAccount.AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ChartOfAccount.AccountType" class="form-label"></label>
        <select asp-for="ChartOfAccount.AccountType" class="form-select">
            <option value="">-- Select Account Type --</option>
            <option value="Assets">Assets</option>
            <option value="Liabilities">Liabilities</option>
            <option value="Equity">Equity</option>
            <option value="Income">Income</option>
            <option value="Expense">Expense</option>
        </select>
        <span asp-validation-for="ChartOfAccount.AccountType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ChartOfAccount.ParentAccountId" class="form-label"></label>
        <select asp-for="ChartOfAccount.ParentAccountId" asp-items="Model.ParentAccounts" class="form-select select2">
            <option value="">-- Select Parent Account (optional) --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="ChartOfAccount.IsActive" class="form-label"></label>
        <select asp-for="ChartOfAccount.IsActive" class="form-select">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
        <span asp-validation-for="ChartOfAccount.IsActive" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="ChartOfAccount.Description" class="form-label"></label>
        <textarea asp-for="ChartOfAccount.Description" class="form-control" rows="4" placeholder="Add description (optional)"></textarea>
    </div>


    <button type="submit" class="btn btn-primary px-4">Create Account</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: "-- Select Parent Account (optional) --",
                allowClear: true,
                width: '100%'
            });
        });
    </script>

}
