<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MiniAccountApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="~/images/MiniAccountLogo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/MiniAccountApp.styles.css" rel="stylesheet" />
    <!-- jQuery (required for Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    @RenderSection("Styles", required: false)
    <style>
        :root {
            --primary-color: #7a9e9f;
            --sidebar-bg: #f4f6f5;
            --sidebar-border: #dee2e6;
            --hover-bg: #e0eceb;
            --active-bg: #d0e2ff;
            --text-muted: #555e5c;
            --sidebar-width: 280px;
            --sidebar-collapsed-width: 70px;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #fefefe;
            overflow: hidden;
        }

        .wrapper {
            display: flex;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        /* Sidebar Overlay for Mobile */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1040;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

            .sidebar-overlay.show {
                opacity: 1;
                visibility: visible;
            }

        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--sidebar-bg);
            border-right: 1px solid var(--sidebar-border);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            position: relative;
            z-index: 1050;
        }

        .sidebar-inner {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .sidebar .nav-link,
        .sidebar .submenu-link {
            color: var(--text-muted);
            padding: 0.65rem 1rem;
            border-radius: 6px;
            transition: background-color 0.2s;
            font-size: 0.925rem;
            white-space: nowrap;
        }

            .sidebar .nav-link:hover,
            .sidebar .submenu-link:hover {
                background-color: var(--hover-bg);
                color: #000;
            }

        .submenu-link.active {
            background-color: var(--active-bg) !important;
            font-weight: 600;
            color: #000;
            border-radius: 6px;
        }

        .sidebar-title {
            font-size: 1.1rem;
            color: var(--primary-color);
            white-space: nowrap;
        }

        .logout-section {
            flex-shrink: 0;
            padding: 1rem;
            border-top: 1px solid var(--sidebar-border);
            background-color: var(--sidebar-bg);
        }

        .sidebar * {
            max-width: 100%;
            box-sizing: border-box;
        }

        .nav-scrollable {
            flex-grow: 1;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .nav-scrollable-content {
            min-width: 240px;
            width: 100%;
        }

        .main-content {
            flex-grow: 1;
            background-color: #fff;
            transition: margin-left 0.3s ease;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .page-content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 2rem;
        }

        .breadcrumb-wrapper {
            position: sticky;
            top: 0;
            z-index: 999;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            padding: 0.75rem 1rem;
        }

        /* Mobile Header */
        .mobile-header {
            display: none;
            align-items: center;
            justify-content: space-between;
            padding: 1rem;
            background-color: var(--sidebar-bg);
            border-bottom: 1px solid var(--sidebar-border);
        }

            .mobile-header .logo-section {
                display: flex;
                align-items: center;
            }

        /* Desktop collapsed state */
        .sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
            overflow-x: visible;
        }

            .sidebar.collapsed .nav-link span,
            .sidebar.collapsed .sidebar-title,
            .sidebar.collapsed .submenu-link span,
            .sidebar.collapsed .nav-section-title,
            .sidebar.collapsed .bi-chevron-down,
            .sidebar.collapsed .logout-section,
            .sidebar.collapsed .Mlogo {
				display: none;
			}

            .sidebar.collapsed .nav-scrollable {
                overflow-x: visible;
            }

            .sidebar.collapsed .d-flex:first-child {
                justify-content: center !important;
                padding: 0.5rem !important;
            }

                .sidebar.collapsed .d-flex:first-child a {
                    display: none;
                }

            .sidebar.collapsed #toggleSidebar {
                margin: 0 !important;
            }

            /* Collapsed sidebar hover tooltip effect */
            .sidebar.collapsed .nav-link,
            .sidebar.collapsed .submenu-link {
                position: relative;
                display: flex;
                justify-content: center;
                padding: 0.75rem 0;
                margin: 0.25rem 0;
            }

                .sidebar.collapsed .nav-link i,
                .sidebar.collapsed .submenu-link i {
                    margin: 0 !important;
                }

                /* Tooltip on hover for collapsed sidebar */
                .sidebar.collapsed .nav-link:hover::after,
                .sidebar.collapsed .submenu-link:hover::after {
                    content: attr(data-tooltip);
                    position: absolute;
                    left: 100%;
                    top: 50%;
                    transform: translateY(-50%);
                    background: #333;
                    color: white;
                    padding: 0.5rem 0.75rem;
                    border-radius: 4px;
                    white-space: nowrap;
                    z-index: 1000;
                    margin-left: 0.5rem;
                    font-size: 0.875rem;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
                }

                .sidebar.collapsed .nav-link:hover::before,
                .sidebar.collapsed .submenu-link:hover::before {
                    content: '';
                    position: absolute;
                    left: 100%;
                    top: 50%;
                    transform: translateY(-50%);
                    border: 6px solid transparent;
                    border-right-color: #333;
                    z-index: 1000;
                }

        /* Responsive Breakpoints */

        /* Large screens (desktops) */
        @@media (min-width: 992px) {
            .sidebar {
                position: relative;
                transform: translateX(0);
            }

            .mobile-header {
                display: none !important;
            }

            .sidebar-overlay {
                display: none;
            }
        }

        /* Medium screens (tablets) */
        @@media (max-width: 991.98px) and (min-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                transform: translateX(-100%);
                z-index: 1050;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                width: 100%;
                margin-left: 0;
            }

            .mobile-header {
                display: flex;
            }

            .page-content {
                padding: 1.5rem;
            }
            /* Hide toggle button in header on tablet */
            .sidebar .d-flex:first-child #toggleSidebar {
                display: none;
            }
        }

        /* Small screens (mobile phones) */
        @@media (max-width: 767.98px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                width: 100%;
                max-width: 320px;
                transform: translateX(-100%);
                z-index: 1050;
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                width: 100%;
                margin-left: 0;
            }

            .mobile-header {
                display: flex;
            }

            .page-content {
                padding: 1rem;
            }
            /* Hide toggle button in sidebar header on mobile */
            .sidebar .d-flex:first-child #toggleSidebar {
                display: none;
            }
            /* Adjust sidebar title font size */
            .sidebar-title {
                font-size: 1rem;
            }
        }

        /* Extra small screens */
        @@media (max-width: 575.98px) {
            .page-content {
                padding: 0.75rem;
            }

            .mobile-header {
                padding: 0.75rem;
            }

            .sidebar-title {
                font-size: 0.9rem;
            }
        }

        /* Scrollbar styling */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }

        /* Smooth transitions for all interactive elements */
        .sidebar,
        .sidebar-overlay,
        .nav-link,
        .submenu-link {
            transition: all 0.3s ease;
        }

        /* Focus styles for accessibility */
        #toggleSidebar:focus,
        #mobileToggle:focus {
            outline: 2px solid var(--primary-color);
            outline-offset: 2px;
        }

        /* Prevent body scroll when sidebar is open on mobile */
        body.sidebar-open {
            overflow: hidden;
        }
    </style>
</head>

