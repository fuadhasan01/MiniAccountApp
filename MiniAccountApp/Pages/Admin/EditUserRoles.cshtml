@page "{id?}"
@model MiniAccountApp.Pages.Admin.EditUserRolesModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<h2>Edit Roles for User</h2>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                <input type="hidden" asp-for="Roles[i].RoleName" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-page="Users" class="btn btn-secondary mt-2">Cancel</a>
</form>
