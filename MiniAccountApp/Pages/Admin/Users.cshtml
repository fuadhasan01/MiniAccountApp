@page
@model MiniAccountApp.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-page="./EditUserRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
